// Página de inicio de programación

// Selector de unidad
.select-place
	margin-top 6px
	min-width 100%
	&-input
		border 0
		border-radius 4px
		box-sizing border-box
		height 34px
		width 100%
		padding  3px 10px 0px 10px
		color dark_blue
		&::-webkit-input-placeholder
			color royal_blue
		&::-moz-placeholder
			position relative 
			left -40px 
			color gray_dark_C
		&:-ms-input-placeholder
			position relative 
			left -40px 
			color gray_dark_C
		&:-moz-placeholder 
			position relative 
			left -40px 
			color gray_dark_C
	&-container
		background-color marine_aqua
		border-radius 4px
		box-sizing border-box
		padding  7px 8px 7px 50px
		position relative
	&-icon
		font-size 27px
		position absolute
		top 11px
		left 11px
		color white
	
	&-results
		display none
		box-sizing border-box
		text-align left
		margin-top 10px
			
		&-list
			list-style none
			padding 0
			margin 0
		&-item
			margin-right 4px
			padding 0
			display inline-block
			margin-bottom 9px
		&-item:last-child
			margin-bottom 0px	
		&-link
			background-color marine_aqua
			border-radius 4px
			color stone_gray
			text-decoration none
			box-sizing border-box
			display inline-block
			font-size 1em
			padding 6px 8px 6px 8px	

// Boton de acceso a formularios de programación

.select-action
	min-width 100%
	list-style none
	background transparent
	
	&-text
		font-size .9em
		
	&-list
		margin 0
		padding-left 0
		
	&-item
		display inline-block
		vertical-align top
		padding 0
		opacity .5
		background royal_blue
		box-sizing border-box
		text-align center
		height 110px
		border-radius 4px
		padding-left 22px
		padding 0
		box-sizing border-box
		transition .3s
		&.is-active
			background-color dark_blue
			opacity 1
			transition .3s
		&-unit
			float left	
		&-assistance
			float right
 
	&-button
		text-align center
		display block;
		position relative
		color stone_gray
		display inline-block
		font-size .9em
		width 115px
		padding 0
		opacity 1
		padding-top 70px
		height 10px
		line-height 15px
		font-weight bold
		&.is-active
			color dark_yellow
			text-decoration none
	&-icon 
		font-size 4em
		position absolute
		left 28px
		top 8px
		color stone_gray
		&.is-active
			color dark_yellow

/// Ajuste de texto del boton 'VISITA UNIDAD'
.text-unit
	position relative
	top 7px		
	

