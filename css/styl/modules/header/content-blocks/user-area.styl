// User area styles

.user-area
	background dark_blue
	height 0px
	overflow hidden
	position fixed
	right 0px
	top 0
	width 230px
	z-index 5
	

	&-header
		
		font-weight bold
		display none;
		color stone_gray
		font-size user-area-header
		position fixed
		text-decoration none		
		z-index 6
		box-sizing border-box
		top 0
		right 0
		height 60px
		overflow hidden
		
		&-text
			position relative
			top -2px
			
		&-profile
			margin-right 9px
		&-icon 
			position relative
			top 20		
			width 10px
			height 10px
		&.transition
			transition .3s	
		&.is-active
			transition .3s
			width 193px !important
			color dark_yellow
			& .user-area-header-icon
				opacity 0
				
	&-outfocus-dropdown
		display none
		height 100%
		left 0
		position fixed
		top 0
		width 100%
		z-index 2
		
		&.is-active
			display block !important
		
	&-nav
		border-top 1px solid stone_gray
		font-size user-area-nav
		list-style none
		width 192px
		margin 0px
		margin-top 58px
		padding 0
		padding-top 10px
		float right
		margin-right 10px
		

		&-item
			margin 0px
			padding 0px
			height 30px
			line-height 30px
			
		
		&-link
			color stone_gray
			text-decoration none
			
			
		&-icon
			font-size 16px
			position relative
			top 4px
			margin-right 7px

@media screen and (min-width : 767px)
	.user-area
	
		&-header
			display inline-block
			right 10px
			width auto
			height 100%
			position absolute
		&.is-active
			height 190px

			