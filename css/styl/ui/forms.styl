// Estilos de alertas


.alert
	display inline-block
	padding 10px 40px
	
	&-list
		margin 0
		padding 0
		&-item
			margin 0
			padding 0
			list-style initial
	&.error 
		background-color #ffbaba
		border 1px solid #DF1A24
		border-radius 2px
		color #DF1A24
	&.warning 
		background-color #FEEFB3
		border 1px solid #9F6000
		border-radius 2px
		color #9F6000
	&.success 
		background-color #b8fcb3
		border 1px solid #3B602A
		border-radius 2px
		color #3B602A


.dialog
	&-listCorrec
		padding 0
		margin 0
		list-style circle
		& .dialog-list-item
			list-style circle
			margin 0
			padding 0
			margin-left 30px
	&-listPrev
		padding 0
		margin 0
		list-style circle
		& .dialog-list-item
			list-style circle
			margin 0
			padding 0
			margin-left 30px
	&-list
		color plaintext
		margin 0
		padding 0
		&-item
			box-sizing: border-box;
			margin 0
			padding 0 10px
		&-title
			background-color dark_yellow
			margin 0
			height 27px
			line-height 27px
			margin-top 20px
			margin-bottom 10px
			padding 0 10px
			&:first-child
				margin-top 0
		
	&-confirm-btm
		border 1px solid #37A84D !important
		background-color #55B867 !important
		& span
			color #ffffff
			font-weight normal
		
	&-cancel-btm
		border 1px solid #b73537 !important
		background-color #DB4F51 !important
		& span
			color #ffffff
			font-weight normal



@media screen and (min-width : 600px)

	.fIU
		&-list	
			&.fTable-list
			&-item
				&.fTable-item
					width 250px
					display inline-block
