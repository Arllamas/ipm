// Estilos generales formulario

.fIU 
	position relative
	width 100%
	&-list
		&-horizontal
			border 1px solid red
			height 50px
			margin-bottom 20px
		&.fTable-list
			text-align left
		&-title
			text-align left 
			color stone_gray
			margin 0
			margin-bottom 20px
		&-item
			
			margin-bottom 20px
			
			&-left
				border 1px solid green
				display block
				vertical-align top
				float left
				width 10%
					
				&-label
					background-color marine_aqua
					border-radius 4px
					box-sizing border-box
					padding  5px 12px
					color dark_yellow
					text-align left
					display inline-block
					font-size .8em
					margin-bottom 5px
					font-style italic
				&-container
					background-color marine_aqua
					padding 4px
					border-radius 4px
					display inline-block
				
			&-right
				border 1px solid green
				display inline-block
				float right
				&-label
					background-color marine_aqua
					border-radius 4px
					box-sizing border-box
					padding  5px 12px
					color dark_yellow
					text-align left
					display inline-block
					font-size .8em
					margin-bottom 5px
					font-style italic
					&-container
						background-color marine_aqua
						padding 4px
						border-radius 4px
						border 1px solid red !important
						display inline-block
				
				
			&.fTable-item
				width 100%
				display block
				margin-right .7em
			&-label
				background-color marine_aqua
				border-radius 4px
				box-sizing border-box
				padding  5px 12px
				color dark_yellow
				text-align left
				display block
				font-size .8em
				margin-bottom 5px
				font-style italic
				&-btm
					border 0
					background-color royal_blue
					color: #f1f1f1
					border-radius 3px
					position relative
					top -3px
					right -8px
					padding 3px 4px
					float right
					&-2
						border 0
						background-color dark_yellow
						color royal_blue
						border-radius 3px
						float right
						padding 3px 4px
						margin-bottom -11px
						
			&-container
				background-color marine_aqua
				padding 4px
				border-radius 4px
				position relative
				&.radio
					text-align: left
					margin-bottom .2em
				&:last-child
					margin-bottom 0
					
			&-input
				display block
				width 	100%
				box-sizing border-box
				height 27px
				color marine_aqua
				transition opacity .3s
			&-radio
				
				display inline-block
				position absolute
				left 12px
				line-height 27px
				height 27px
				
				&-label
					display inline-block
					background-color white
					box-sizing border-box
					height 27px
					line-height 27px
					color marine_aqua
					width 100%
					padding-left 27px
					cursor pointer
					// transition opacity .3s
					
			&-textarea
				transition opacity .3s
				display block
				width 	100%
				max-width 100%
				box-sizing border-box
				height 50px
				max-height 50px
				resize none
				color marine_aqua
			&-select
				background-color white
				display block
				width 	100%
				box-sizing border-box
				height 27px
				border 1px solid transparent
				color marine_aqua
				transition opacity .3s
			&-btm
				background-color royal_blue
				border 0
				border-radius 4px
				color stone_gray
				font-size 1.3em
				padding 6px 8px 6px 8px	
				position absolute
				right 0
				bottom -50px

.input-disabled
	transition opacity .3s
	opacity .5
	
.input-error
	background #DF1A24
.input-warning
	background #F2DA4D
	

